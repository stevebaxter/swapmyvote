<div class="background-pattern border-bottom">
  <div class="container container-extra-narrow">
    <div class="card">
      <div class="card-header">
        <h2 class="h4 mb-0">Sign up with email</h2>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "mb-0" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :name, class: "mb-0" %>
            <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "mb-0" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :confirm_password, class: "mb-0" %>
            <%= f.password_field :confirm_password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group form-check">
            <%= f.check_box :consent_news_email, class: "form-check-input" %>
            <%= f.label  :consent_news_email, "Opt-in to Forward Democracy email updates", class: "mb-0 form-check-label" %>
          </div>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <hr>

        <div class="text-center small">
          Or <%= link_to "log in", new_user_session_path %>
        </div>
      </div>
    </div>
  </div>
</div>
